<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">

	<title lang="ko">Artyboard Default Skin</title>

	<languages>
		<title lang="ko" path="ko">한국어</title>
	</languages>

	<description lang="ko">
		<![CDATA[Artyboard Default Skin<br>아티보드에서 기본적으로 제공되는 스킨입니다.]]>
	</description>

	<version>0.1</version>
	<date>2010-03-24</date>
	<author email_address="manager@openkr.com" link="http://http://webarty.com">
		<name lang="ko">김현일</name>
	</author>

	<license>GPL</license>

	<colors>
		<color name="white" src="screenshot/white.gif">
			<title lang="ko">하얀색(기본)</title>
		</color>
	</colors>

	<extra_vars>

		<var name="disp_style" type="select" default="Y">
			<title lang="ko">게시판 형태 상단 출력</title>
			<description lang="ko">
				게시판 형태를 선택할 수 있는 링크를 출력합니다.
			</description>
			<options value="Y">
				<title lang="ko">출력</title>
			</options>
			<options value="N">
				<title lang="ko">출력하지 않음</title>
			</options>
		</var>

		<var name="display_login_info" type="select" default="N">
			<title lang="ko">로그인 정보 출력</title>
			<options value="Y">
				<title lang="ko">출력</title>
			</options>
			<options value="N">
				<title lang="ko">출력하지 않음</title>
			</options>
			<description />
		</var>

		<var name="display_setup_button" type="select" default="N">
			<title lang="ko">설정 표시</title>
			<options value="Y">
				<title lang="ko">출력</title>
			</options>
			<options value="N">
				<title lang="ko">출력하지 않음</title>
			</options>
			<description />
		</var>

		<var name="display_gallery_title" type="text" default="14">
			<title lang="ko">갤러리 제목길이 제한</title>
			<description lang="ko">게시판 목록에 갤러리 형식일때 제목의 길이를 설정합니다.</description>
		</var>

		<var name="display_name" type="select" default="N">
			<title lang="ko">글읽기 모드 이름출력</title>
			<options value="Y">
				<title lang="ko">출력</title>
			</options>
			<options value="N">
				<title lang="ko">출력하지 않음</title>
			</options>
			<description />
		</var>
	
		<var name="sub_title" type="text">
			<title lang="ko">게시판 부제목</title>
			<description lang="ko">게시판 제목 옆에 나타날 부제목을 적어주세요.</description>
		</var>

		<var name="title_comment" type="textarea">
			<title lang="ko">게시판 상세 설명</title>
			<description lang="ko">게시판 제목 아래 표시될 설명을 입력하실 수 있습니다.</description>
		</var>

		<var name="duration_new" type="text" default="24">
			<title lang="ko">new표시 시간 (hours)</title>
			<description lang="ko">새로 등록된 게시물의 new 표시시간을 정할 수 있습니다. </description>
		</var>

	</extra_vars>
</skin>

